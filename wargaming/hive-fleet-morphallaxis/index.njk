<h2>Resources</h2>
<dl class="summary-list">
	<dt>Battle tally:</dt>
	<dd>
		{{  collections.battle | length }}
		(<a href="battles">Log</a>)
	</dd>

	<dt>Battles won:</dt>
	<dd>0</dd>

	<dt>Requisition Points:</dt>
	<dd>
		1
		(<a href="requisition-log">Log</a>)
	</dd>

	<dt>Supply Limit:</dt>
	<dd>1100</dd>

	<dt>Supply Used:</dt>
	<dd>
		{% set pointsTotal = 0 %}
		{% for unit in collections.unit %}
			{% set pointsTotal = pointsTotal + unit.data.points %}
		{% endfor %}
		{{ pointsTotal }}
	</dd>
</dl>
<h2>Units</h2>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Points Value</th>
			<th>Crusade Points</th>
		</tr>
	</thead>
	<tbody>
		{% for unit in (collections.unit | sortUnits) %}
			<tr>
				<td>
					<a href="{{ unit.url }}">{{ unit.data.name }}</a>
				</td>
				<td>
					{{ unit.data.quantity }} {{ unit.data.type -}}
					{{- "s" if (unit.data.quantity | default(1)) != 1 }}
				</td>
				<td>{{ unit.data.points }}</td>
				<td>{{ unit.data.crusadePoints | default(0) }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
